<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiliang.mapper.UserInMapper">

    <update id="updateById">
        update workhouse_managementshu.user
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="name !=null">
                name = #{name},
            </if>
            <if test="phone !=null">
                phone = #{phone},
            </if>
            <if test="sex">
                sex = #{sex},
            </if>
            <if test="idNumber">
                id_number = #{idNumber},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>